{
  "scripts": {
    "start": "react-scripts start",
    "build-css": "tailwindcss build -i input.css -o output.css",
    "watch-css": "tailwindcss build -i input.css -o output.css --watch",
    "dev": "concurrently \"npm run watch-css\" \"npm start\""
  },
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5"
  }
}
